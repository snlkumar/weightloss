
<%= render :partial => 'forem/forums/head', :locals => { :forum => @topic.forum } %>

<h2><%= t("forem.post.new") %></h2>

<%= simple_form_for [@topic, @post] do |f| %>
  <%= render :partial => "form", :locals => { :f => f } %>
  
  <!-- new code  :onclick=>'return uploadComment()' -->
<div style="margin-left:-25%;">
  <%= f.submit t("forem.post.buttons.reply"), :id=>"replyComment", :onclick=>'return uploadComment()' %>
</div>  
<% end %>
