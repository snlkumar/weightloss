<%if current_user.nil?%>
<div style="background-color:#FCFCFC;opacity:.90;border:5px solid #BBC;"><div style=margin-left:.7em>
<font size=4 color=black>We want to hear from you!! Have a question or want to make a comment in our Forum Section? Posting is simple and totally FREE! Click the <a href="<%=main_app.new_user_registration_path%>" >“SIGN UP”</a> button at the top and within minutes you can be interacting with our experts and members! </font></div>
</div>

<br/><br/>

<%end%>

<%= render :partial => 'forem/forums/head', :locals => { :forum => @forum } %>


<% if @topics.num_pages > 1 %>
  <div class='pages'>
    <%= t('forem.common.pages') -%>: <%= paginate @topics %>
  </div>
<% end %>
<table class='topics subdued' cellspacing='0'>
  <thead>
    <tr>
      <th></th>
      <th><%= t('forem.topic.headings.topic') -%></th>
      <th><%= t('forem.topic.headings.latest') -%></th>
      <th><%= t('forem.topic.headings.posts') -%></th>
      <th><%= t('forem.topic.headings.views') -%></th>
    </tr>
  </thead>
  <tbody>
    <% if @topics.empty? %>
      <tr><td colspan='5' align='center'><%= t('forem.topic.none') %></td></tr>
    <% end %>
    <%= render :partial => 'forem/topics/topic_listing', :collection => @topics %>
  </tbody>
</table>
