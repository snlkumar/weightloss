<div style="margin-top: 5px;">
  <% if user_signed_in? %>
    Hi, <%= link_to current_user.full_name, user_path(current_user) %> 
    <% if current_user.admin %>
      | <%= link_to 'Admin', admin_dashboard_path, :title => 'Admin Dashboard' %>
    <% end %>
    | <%= link_to 'Sign Out', destroy_user_session_path, :method => :delete, :title => 'Sign Out' %> 
  <% else %>
    Already a User? <%= link_to 'Sign in', new_user_session_path() %> | <%= link_to 'Sign up', new_user_registration_path() %>
  <% end %>
</div>