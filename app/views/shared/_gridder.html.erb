<script type="text/javascript" charset="utf-8">
      <% content_for :js do %>
        window.gOverride = {
          gColor: '#FF0000',
          pColor: '#0000FF',
          gOpacity: 0.15,
          pOpacity: 0.25,
          pHeight: 18,
          pOffset: -2,
          gColumns: 16,
          invert: true
        }
      
        createGridder = function() {
          document.body.appendChild(
            document.createElement('script'))
            .src='/javascripts/960.gridder.js';
        }
        <% if Rails.env.development? && @grid %>createGridder();<% end %>
      <% end %>
    </script>