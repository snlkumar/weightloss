<tr>
  <td class="exercise-name">
    <%= workout_item_form.object.exercise.try(:description) %>
    
    <%= workout_item_form.hidden_field :exercise_id %>
  </td>
  <td class="calories">
    <%= workout_item_form.object.calories %>
  </td>
  <td class="duration">
    <!-- Must be immediately before delete image for js to set _destroy attribute -->
    <%= workout_item_form.hidden_field :_destroy %>
    <%= link_to_function image_tag('delete.png'), "remove_meal_or_exercise_item(this)", :class => 'delete' %>
    
    <%= workout_item_form.object.duration %> (mins)
    <%= workout_item_form.hidden_field :duration %>
  </td>
  
</tr>