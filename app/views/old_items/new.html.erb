<h1>New item</h1>

<% form_for(@item, :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>

  <table>
    <tbody>
      <tr>
        <td>
          <p>
            <%= f.label :name %><br />
            <%= f.text_field :name %>
          </p>
          <p>
            <%= f.label :long_description %><br />
            <%= f.text_area :long_description %>
          </p>
          <p>
            <%= f.label :meta_description %><br />
            <%= f.text_field :meta_description %>
          </p>
          <p>
            <%= f.label :meta_keywords %><br />
            <%= f.text_field :meta_keywords %>
          </p>
          <p>
            <%= label_tag 'Category' %><br />
            <%= aac_select(Category.roots, {:selected => @item.category_id, :name => 'old_item[category_id]', 
                                            :parents_nil => true, :option_nil => '--'}) %>
          </p>
          <p>
            <%= f.label :tag_list, "Tag List (comma seperated)" %><br />
            <%= f.text_field :tag_list %>
          </p>
        </td>
        <td>
          <p>
            <%= f.label :image1, 'Screenshot/Thumbnail 1' %><br />
            <%= f.file_field :image1 %><br />
          </p>
          <p>
            <%= f.label :unit %><br />
            <%= f.text_field :unit %>
          </p>
          <p>
            <%= f.label :price %><br />
            <%= f.text_field :price %>
          </p>
          <p>
            <%= f.label :weight %><br />
            <%= f.text_field :weight %>
          </p>
          <p>
            <%= f.label :length %><br />
            <%= f.text_field :length %>
          </p>
          <p>
            <%= f.label :width %><br />
            <%= f.text_field :width %>
          </p>
          <p>
            <%= f.label :height %><br />
            <%= f.text_field :height %>
          </p>
          <p>
            <%= f.label :keywords %><br />
            <%= f.text_field :keywords %>
          </p>
          <p>
            <%= f.label :sku %><br />
            <%= f.text_field :sku %>
          </p>
        </td>
      </tr>
    </tbody>
  </table>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', old_items_path %>