<h1>Listing Flash Files</h1>

<%= link_to 'New flash_file', new_old_flash_file_path %>
<br /><br />

<table class="sort-table">
  <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th>Description</th>
      <th>Vendor</th>
      <th>Teaser</th>
      <th>Attachments</th>
      <th> </th>
    </tr>
  </thead>
  <tbody>
    <% @flash_files.each_with_index do |flash_file, index| %>
      <tr class="<%= cycle('', 'odd') %>">
        <td><%= index + 1 %></td>
        <td><%= truncate(h(flash_file.title),       :length => 50) %></td>
        <td><%= truncate(h(flash_file.description), :length => 50) %></td>
        <td><%= truncate(h(flash_file.vendor_name), :length => 50) %></td>
        <td><%= truncate(h(flash_file.teaser),      :length => 50) %></td>
        <td>
          <%= image_tag('file.png') + " #{flash_file.file1.original_filename}" if flash_file.file1.file? %><br />
          <%= image_tag('file.png') + " #{flash_file.file2.original_filename}" if flash_file.file2.file? %>
        </td>
        <td>
          <%= link_to 'Edit', edit_old_flash_file_path(flash_file) %> | 
          <%= link_to 'Destroy', flash_file, :confirm => 'Are you sure?', :method => :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript" charset="utf-8">
  <% content_for :js do %>
    $('.sort-table').tablesorter();
  <% end %>
</script>