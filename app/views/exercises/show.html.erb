<div id="exercise_form" style="float:left;">
  <%= form_for @exercise do |f| %>
    <%= f.error_messages %>
    <table border="0" width="75%">
      <tr>
        <td colspan="2"><h2 style="padding-bottom:1.5em;">Exercises <%=@exercise.description%></h2><br><br></td>
      </tr>
      <tr>
        <td colspan="2">
          <div>
            <% if f.object.avatar.file? %>
              <p><%= f.label f.object.avatar_file_name %></p>
              <%= image_tag f.object.avatar.url, :size=>"130x90", :alt => "Exercise image" %>
            <% end %> 
          </div><br>
        </td>
      </tr>
      <tr>
			    <td><%= f.label :description %></td>
			    <td>
				    <%= f.text_field :description, :class => 'grid_6 alpha', :disabled=>:true, :style=>"height:20px;width:70%;margin:0 0 10px 0;padding:0;" %> 
			    </td>
	    </tr>
	    <!-- new added field -->
	    <tr>
			  <td><%= f.label :detailes, 'Detailed' %></td>
			  <td><%= f.text_area :detailes, :class => 'grid_6 alpha', :disabled=>:true, :style=>"width:50%;margin:0 0 10px 0;padding:0;" %></td>	
      </tr>
      <!--end-->
	    <tr>
			    <td><%= f.label :category %></td>
			    <td>
				    <%= f.text_field :category, :class => 'grid_6 alpha', :disabled=>:true, :style=>"height:20px;width:70%;margin:0 0 10px 0;padding:0;" %> 
			    </td>
	    </tr>
	    <tr>
			    <td><%= f.label :mets %></td>
			    <td>
				    <%= f.text_field :mets, :class => 'grid_6 alpha', :disabled=>:true, :style=>"height:20px;width:70%;margin:0 0 10px 0;padding:0;" %> 
			    </td>
	    </tr>
	    <tr>
			    <td><%= f.label :calories %></td>
			    <td>
				    <%= f.text_field :calories, :class => 'grid_6 alpha', :disabled=>:true, :style=>"height:20px;width:70%;margin:0 0 10px 0;padding:0;" %> 
			    </td>
	    </tr>
  </table>
  <% end %>
</div>
