<h1>Editing tip_of_day</h1>

<% form_for(@tip_of_day) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @tip_of_day %> |
<%= link_to 'Back', old_tip_of_days_path %>