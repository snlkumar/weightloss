	<%#=select_tag 'notificationToId[]', options_for_select(User.find(:all, :order=>'first_name ASC').map {|s| ["#{s.first_name} "+ "#{s.last_name}", s.id]}), :multiple => true, :size => 10, :id=>"noticefor",:style=>"width:10em;"%>

  </p>
    
   
