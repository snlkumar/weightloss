<script type="text/javascript">
  <% content_for :js do %>
    $(function() {
      $("tr").mouseover(function(){
        $(this).css("background-color","#ccc");
      }).mouseout(function(){
        $(this).css("background-color","#E6EEEE");
      });
   });
  <%end%>
</script>
<br><%= link_to 'Back', :back, :style=>"margin-left:20%;" %><br>

