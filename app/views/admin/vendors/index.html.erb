<style type="text/css">
.even { background: #E6EEEE; }
.odd { background: #cccccc; }
.head-table{background: #ccc; }
</style>

<script type="text/javascript">
  <%content_for :js do%>
    $("table tbody tr").mouseover(function(){
      $(this).css("background-color","#ccc");
    }).mouseout(function(){
      $(this).css("background-color","");
    });
          
  <%end%>
</script>
<div class="grid_16">
  
  <br/>
    <h2 style="font-size:20px;align:center;background-color:#0B2B42;width:46em;">Vendors</h2>


<div style="float:left;">  
  <form id="vendorform" method='get' action="<%=admin_vendors_path%>">
  <input type="hidden" id="status" name="status" value="true">
  <button style="width:95px;background-color:#2E8DC0;" onclick=submit()>Restaurants</button> 
  </form>
</div>

<div style="float:left;">    
    <form id="vendorform" method='get' action="<%=admin_vendors_path%>">
  <input type="hidden" id="status" name="status" value="false">
  <button style="width:95px;background-color:#2E8DC0;" onclick=submit()>Vendors</button>
  </form></div>
  <br/>  <br/>
   <%= page_entries_info(@vendors) %>
  
  <%= paginate(@vendors, :params => pagination_params(request)) %>  
  
  <br/>

<%if @status=="true"%>
  <table class="admin">
    <thead>
      <tr class="head-table">
        <th>Name</th>
        <th>Vendor Type</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @vendors.each do |vendor| %>
        <tr class="<%= cycle('odd', 'even') %>">
          <!--<td><%#= link_to exercise.description, edit_admin_exercise_path(exercise) %></td>-->
          <td><%=vendor.business_name%> </td>
          <td><%=vendor.vendor_type%> </td>
          <td><%=vendor.contact1%> </td>
          <td><%=vendor.email%> </td>
                    <td class="actions">
           <%= link_to 'Vendor detail', admin_vendor_path(vendor.id)+"/restaurants"%> |
            <%= link_to 'Edit', "/admin/vendors/#{vendor.id}/edit/restaurants" %> |
            <%= link_to 'Delete', "/admin/vendors/#{vendor.id}/delete/restaurants", :confirm => 'Are you sure?', :method => :delete %>
	   </td>
        </tr>
      <% end %>
    </tbody>
  </table>

<%else%>
 
	<table class="admin">
	    <thead>
	      <tr class="head-table">
		<th>Name</th>
        <th>Vendor Type</th>
        <th>Phone</th>
        <th>Email</th>
		<th>Action</th>
	      </tr>
	    </thead>
	    <tbody>
	      <% @vendors.each do |vendor| %>
		<tr class="<%= cycle('odd', 'even') %>">
		  <!--<td><%#= link_to exercise.description, edit_admin_exercise_path(exercise) %></td>-->
		  <td><%=vendor.business_name%> </td>
          <td><%=vendor.vendor_type.split('_').join(' ')%> </td>
          <td><%=vendor.contact1%> </td>
          <td><%=vendor.email%> </td>
		            <td class="actions">
		   <%= link_to 'Vendor detail', admin_vendor_path(vendor.id)%> |
		    <%= link_to 'Edit', "/admin/vendors/#{vendor.id}/edit/vendors" %> |
            <%= link_to 'Delete', "/admin/vendors/#{vendor.id}/delete/vendors", :confirm => 'Are you sure?', :method => :delete %>
		   </td>
		</tr>
	      <% end %>
	    </tbody>
	  </table>
 <%end%>
</div>
