<div class="grid_12">
  <%= link_to 'Back', admin_users_path %>
  
  <h3>Edit User</h3>
  
  <% form_for [:admin, @user], :html => {:class => 'edit', :multipart => true} do |f| %>
    <%= f.error_messages %>
    
    <%= render :partial => 'form', :locals => {:f => f} %>
    
    <%= render :partial => '/users/personal_info', :locals => {:f => f} %>
    
    <p>
      <%= f.submit 'Update' %>
    </p>
  <% end %>
  
  <%= link_to 'Back', admin_users_path %>
</div>
