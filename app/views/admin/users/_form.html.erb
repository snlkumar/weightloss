<p>
  <%= f.label :admin, :style=>"float:left;" %>
  <%= f.check_box :admin, :class => 'alpha', :disabled=> (@user.id==current_user.id) ? true : false %>
  <span class="clear"></span><br>
</p>
<p>
  <%= f.label :username, %Q{Username  <span class="help-text">(Minimum of 4 Characters)</span> }.html_safe %><br/>
  <%= f.text_field :username, :placeholder => "Ex: Nickname", :class => 'grid_6 alpha' %>
  <span class="clear"></span>
</p>

<!-- new change to remove password field for admin means if user admin don't show these field-->
<% if !current_user.admin %>
<p>
  <%= f.label :password, %Q{Password  <span class="help-text">(Minimum of 6 Characters)</span> }.html_safe %><br/>
  <%= f.password_field :password, :placeholder => "Your password", :class => 'grid_6 alpha' %>
  <span class="clear"></span>
</p>

<p>
  <%= f.label :password_confirmation, %Q{ Confirm Password <span class="help-text">(Minimum of 6 Characters)</span> }.html_safe %><br/>
  <%= f.password_field :password_confirmation, :placeholder => "Confirm Your Password", :class => 'grid_6 alpha' %>
  <span class="clear"></span>
</p>
<%end%>
<p>
  <%= f.label :email, %Q{ Email <span class="help-text">(Note: Email will not be publicly displayed.)</span> }.html_safe %><br/>
  <%= f.text_field :email, :placeholder => "Ex: email@address.com", :class => 'grid_6 alpha' %>
  <span class="clear"></span>
</p>
