<div class="grid_16">
  <%= link_to 'Back', admin_dashboard_path %>
  
  <br/>
  
  <h2>Listing Users</h2>
  
  <%= link_to 'New user', new_admin_user_path %>
  
  <br/>
  
  <%= page_entries_info(@users) %>
  
  <% paginated_section(@users, :params => pagination_params(request)) do %>
  
    <table class="admin">
      <thead>
        <tr>
          <th>Name</th>
          <th> </th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr  class="<%= cycle('odd', '') %>">
            <td><%= user.full_name %></td>
            <td class="actions">
              <%= link_to 'Edit', edit_admin_user_path(user) %> | 
              <%= link_to 'Delete', admin_user_path(user), :confirm => 'Are you sure?', :method => :delete %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
  <% end %>
</div>