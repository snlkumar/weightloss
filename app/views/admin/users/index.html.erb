<h1>Listing users</h1>

<%= link_to 'New user', new_user_path %>

<br />

<% paginated_section @users do %>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th> </th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.full_name %></td>
          <td class="actions">
            <%= link_to 'Edit', edit_admin_user_path(user) %>
            <%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>