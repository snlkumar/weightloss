    selected=$(this).find("option:selected").text();
    if (page=="")
    {
     $("#meta_title, #keywords, #description, #url").val("");
    return false;
    }  
    if (selected=="Video Show") 
    {
       $("#hide1").show();
      page=$("#videos").val();			
    } 
    
    if (selected=="Article Show") 
    {
       $("#hide2").show();
      page=$("#articles").val();			
    }     
    
      
