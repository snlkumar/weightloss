<div class="grid_16">
  <%= link_to 'Back', admin_dashboard_path %>
  
  <br/>
  
  <h2>Listing Posts</h2>
  
  <%= link_to 'New post', new_admin_post_path %>
  
  <br/>
  
  <%= page_entries_info(@posts) %>
  
  <% paginated_section(@posts, :params => pagination_params(request)) do %>
  
    <table class="admin">
      <thead>
        <tr>
          <th>Title</th>
          <th>Author</th>
          <th>Snippet</th>
          <th> </th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr  class="<%= cycle('odd', '') %>">
            <td><%= post.title %></td>
            <td><%= post.author %></td>
            <td><%= truncate(strip_tags(post.body), :length => 50) %></td>
            <td class="actions">
              <%= link_to 'Edit', edit_admin_post_path(post) %> | 
              <%= link_to 'Delete', [:admin, post], :confirm => 'Are you sure?', :method => :delete %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
  <% end %>
</div>