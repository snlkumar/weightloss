<div class="grid_12">
  <%= link_to 'Back', admin_posts_path %>
  
  <h3>Edit Post</h3>
  
  <% form_for [:admin, @post], :html => {:class => 'edit'} do |f| %>
    <%= f.error_messages %>
    
    <%= render :partial => 'form', :locals => {:f => f} %>
    
    <p>
      <%= f.submit 'Update' %>
    </p>
  <% end %>
  
  <%= link_to 'Back', admin_posts_path %>
</div>