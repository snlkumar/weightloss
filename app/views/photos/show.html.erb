

<script type="text/javascript">
	function showImage(path)
	{
		document.getElementById('light').style.display='block';
		document.getElementById('fade').style.display='block';
		
		document.getElementById('showImg').style.width="100%";
		document.getElementById('showImg').style.height="100%";
		document.getElementById('showImg').style.paddingTop="1.0em";
		document.getElementById('showImg').style.marginTop="-1.0em";
		document.getElementById('showImg').src=path;
	}
</script>
<link rel="stylesheet" href='/assets/hoverbox.css' type="text/css" media="screen, projection" />
<!--[if lte IE 7]>
<link rel="stylesheet" href='/assets/ie_fixes.css' type="text/css" media="screen, projection" />
<![endif]-->

<h1 style="margin-left:40%;">Photos</h1>
<ul class="hoverbox" style="overflow:auto;height:30em;width:50em;margin-left:15%;">
	<% @photo.each do |f| %>
		<li>
			<a href = "javascript:void(0)" onclick = "showImage('<%=f.photo.url %>')">
				<img src="<%=f.photo.url(:large) %>" alt="description" /><br/>
				<%=f.created_at.strftime("%m-%d-%Y")%>
				<img src="<%=f.photo.url(:large) %>" alt="description" class="preview" />
			</a>
		</li>
	<% end %>
</ul>
	
<!-- show image on lightbox -->
<div id="light" class="white_content">
	<a href = "javascript:void(0)" onclick = "document.getElementById('light').style.display='none';document.getElementById('fade').style.display='none'">
	<div style="background-image:url('/assets/close.png');float:right;width:20px;height:20px;margin-right:-3.5em;margin-top:-3.5em;"></div></a>
	<%=image_tag "",:id=>"showImg" %>
</div>

<div id="fade" class="black_overlay"></div>


<div id="showPhotosBeforeAfterMultiple" style="margin-left:20%;padding:1%;">
	<%= link_to "Show Before measurement photo", "/photos/#{@user_id}/before" %>
	<%= link_to "Show After measurement photo", "/photos/#{@user_id}/after"%>
	<%= link_to "All photos", photo_path(@user_id)%>
</div>

<%if current_user %>
	<div id="photoform" style="margin-left:25%;margin-top:5%;width:40%;">
	<%= form_for @photo1, :url => photos_path, :multipart => true do |f| %>
	<%= f.label 'Upload Photo' %><br/>
	  	<%= f.file_field :photo %>
		<%= f.hidden_field :before_after, :value=>"false" %>
		<%= f.submit 'Upload'%>
	  <% end %>

	<%= form_for @photo1, :url => photos_path, :multipart => true do |f| %>
	  <%= f.label 'Before Measurements' %><br/>
		<%= f.hidden_field :before_after, :value=>"before" %>
	  <%= f.file_field :photo, :size => '6' %>
		<%= f.submit 'Upload'%>
	  <% end %>

	<%= form_for @photo1, :url => photos_path, :multipart => true do |f| %>
	<%= f.label 'After Measurements' %><br/>
		<%= f.hidden_field :before_after, :value=>"after" %>
	  <%= f.file_field :photo, :size => '6' %>
		 	<%= f.submit 'Upload'%>
	  <% end %>
	</div>
<%end%>
