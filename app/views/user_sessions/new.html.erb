<% [:error, :notice].each do |msg| %>
  <% if flash[msg] %>
    <p id="flash_<%= msg %>"><%= flash[msg] %></p>
  <% end %>
<% end %>

<div id="sign-up-form" class="center">
  
  <h2>Sign In</h2>
  
  <% form_for @user_session, :url => user_session_path do |f| %>
    <%= f.error_messages %>
    
    <p>
      <%= f.label :email %><br />
      <%= f.text_field :email %><br />
    </p>
    <p>
      <%= f.label :password %><br />
      <%= f.password_field :password %><br />
    </p>
    
    <%= f.submit "Sign In" %>
  <% end %>
  
</div>
