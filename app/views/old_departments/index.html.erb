<h1>Listing Departments</h1>

<table id="old_departments">
  <tr>
    <th>Name</th>
  </tr>

<% @departments.each do |department| %>
  <tr class="<%= cycle('', 'odd') %>">
    <td><%=h department.name %></td>
    <td><%= link_to 'Show', department %></td>
    <td><%= link_to 'Edit', edit_old_department_path(department) %></td>
    <td><%= link_to 'Destroy', department, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New department', new_old_department_path %>