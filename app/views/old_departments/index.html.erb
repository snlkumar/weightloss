<h1>Listing Departments</h1>

<table id="old_departments">
  <tr>
    <th>#</th>
    <th>Name</th>
    <th> </th>
  </tr>
  
  <% @departments.each_with_index do |department, index | %>
    <tr class="<%= cycle('', 'odd') %>">
      <td><%= index + 1 %></td>
      <td><%=h department.name %></td>
      <td>
        <%= link_to 'Edit', edit_old_department_path(department) %> | 
        <%= link_to 'Destroy', department, :confirm => 'Are you sure?', :method => :delete %>
      </td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to 'New department', new_old_department_path %>