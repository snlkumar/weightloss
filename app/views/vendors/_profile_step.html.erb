<script type="text/javascript">

$(document).ready(function(){
 
    var counter = 2;
 
    $("#addButton").click(function () {
 
	if(counter>3){
            alert("Maximum 3 addresses are allowed");
            return false;
	}   
 
	var newTextBoxDiv = $(document.createElement('div')).attr("id", 'TextBoxDiv' + counter).append('<label style="margin-left:25px;">Address #'+ counter + ' : </label>' +'<textarea style="width:225px;height:50px;margin-top:5px; margin-left:75px; padding:5px;" name="vendor[address' + counter + ']" id="vendor_address' + counter + '" value="" >');
 
	newTextBoxDiv.appendTo("#TextBoxesGroup");
 
	counter++;
     });
 
     $("#removeButton").click(function () {
	if(counter==2){
          alert("Minimum one address is required");
          return false;
       }   
 
	counter--;
 
        $("#TextBoxDiv" + counter).remove();
 
     });
 
     $("#getButtonValue").click(function () {
 
	var msg = '';
	for(i=1; i<counter; i++){
   	  msg += "\n Textbox #" + i + " : " + $('#address' + i).val();
	}
    	  alert(msg);
     });
  });



<% content_for :js do %>
    $('#distance-slider').slider({
          range: "min",
          step:  10,
          value: 0,
          min: 0,
          max: 500,
          slide: function( event, ui ) {
            miles=ui.value;
            $( "#distance-view" ).html(miles);
            $( "#distance-val" ).val( ui.value );
          }
        });
    
    miles= $( "#distance-slider" ).slider( "value" );
    
    $( "#distance-view" ).html( miles);
  <% end %>


</script>

