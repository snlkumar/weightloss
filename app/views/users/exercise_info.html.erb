<%= render :partial => 'edit_profile_tabs' %>


<div class="grid_12">
  <h2>Personal Info</h2>

  <% form_for current_user, :html => {:class => 'edit'} do |f| %>
    <p>
      <%= f.label :exercise_goals %><br/>
      <%= f.text_area :exercise_goals, :class => 'grid_6 alpha' %>
      <span class="clear"></span>
    </p>
    
    <p>
      <%= f.label :exercise_types %><br/>
      <%= f.text_field :exercise_types, :class => 'grid_6 alpha' %>
      <span class="clear"></span>
    </p>
    
    <p>
      <%= f.label :activities %><br/>
      <%= f.text_field :activities, :class => 'grid_6 alpha' %>
      <span class="clear"></span>
    </p>
    
    <%= f.submit 'Save' %>
  <% end %>
</div>
