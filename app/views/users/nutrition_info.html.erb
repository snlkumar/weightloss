<div class="grid_11">
  <h3>Nutrition Information</h3>
  
  <%= form_for current_user, :html => {:class => 'edit'} do |f| %>
    
    <p>
      <%= f.label :nutritional_goals %><br/>
      <%= f.text_area :nutritional_goals, :class => 'grid_6 alpha' %>
      <span class="clear"></span>
    </p>
    
    <p>
      <%= f.label :diet %><br/>
      <%= f.text_area :diet, :class => 'grid_6 alpha' %>
      <span class="clear"></span>
    </p>
    
    <p>
      <%= f.label :supplements %><br/>
      <%= f.text_area :supplements, :class => 'grid_6 alpha' %>
      <span class="clear"></span>
    </p>
    
    <p>
      <%= f.label :favorite_restaurants %><br/>
      <%= f.text_area :favorite_restaurants, :class => 'grid_6 alpha' %>
      <span class="clear"></span>
    </p>
    
    <%= f.submit 'Save' %>
  <% end %>
</div>
