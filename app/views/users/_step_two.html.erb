<div style="float:left; width: 125px;" >
  <%= image_tag 'you.png' %>
</div>

<div style="float:left; width: 450px;">
  <h2 style="padding-left: 0px;">Tell Us About Yourself</h2>
  <p style="padding-left: 0px;">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut.</p>
</div>

<div style="clear:both">&nbsp;</div>

<div style="float:left; width: 225px;" >
  <%= label_tag 'Profile Photo' %>
  <div class="avatar-placeholder">
    
  </div>
  <%= label_tag '', %Q{<span class="help-text">File types: .png, .jpg, .gif</span> } %><br/>
  <%= label_tag '', %Q{<span class="help-text">(4MB max).</span> } %>
  <%= f.file_field :avatar, :size => '6' %>
</div>

<div style="float:left;" >
  <ol class="forms">
    <li>
      <%= f.label :gender %>
      <%= f.select :gender, [['Choose', 0], ['Male', 'male'], ['Female', 'female']] %>
      <br/><br/>
    </li>

    <li>
      <%= f.label :birthdate %>
      <%= f.date_select :birthdate, :start_year => Time.zone.now.year, :end_year => 100.years.ago.year %>
    </li>
  </ol>
</div>

<div style="clear:both; margin-bottom: 25px;">&nbsp;</div>

<%= image_tag 'signup_personal_seperator.png' %>

<div style="float:left; width: 125px;" >
  <p style="font-weight:bold; font-size: 2em; padding: 24px;">goals.</p>
</div>

<div style="float:left; width: 450px;">
  <h2 style="padding-left: 0px;">Create a baseline to work against</h2>
  <p style="padding-left: 0px;">
    Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut.
  </p>
</div>

<div style="clear:both">&nbsp;</div>

<ol class="forms">
  <li>
    <%= f.label :height, %Q{Height <span class="help-text">(Height will not be publicly displayed)</span> } %>
    <div id="height-slider" style="height: 15px; width: 200px; margin-bottom: 10px;"></div>
    <%= text_field_tag "", "", :id => "height-view", :disabled => true, :style => 'width: 30px;' %>
    <%= f.hidden_field :height, :id => 'height-val' %>
  </li>

  <li>
    <%= f.label :weight, %Q{Weight <span class="help-text">(Weight will not be publicly displayed)</span> } %>
    <div id="weight-slider" style="height: 15px; width: 200px; margin-bottom: 10px;"></div>
    <%= text_field_tag "", "", :id => "weight-view", :disabled => true, :style => 'width: 45px;' %>
    <%= f.hidden_field :weight, :id => 'weight-val' %>
  </li>
</ol>

<script type="text/javascript" charset="utf-8">
  <% content_for :js do %>
    $('#height-slider').slider({
          range: "min",
          value: 60,
          min: 36,
          max: 98,
          slide: function( event, ui ) {
            var feet   = Math.floor( ui.value / 12);
            var inches = Math.round((ui.value / 12 - feet) * 12);
            $( "#height-view" ).val( feet+"'"+inches+'"' );
            $( "#height-val" ).val( feet+"'"+inches+'"' );
          }
        });
        
    var feet = Math.floor($( "#height-slider" ).slider( "value" ) / 12);
    var inches = Math.round(($( "#height-slider" ).slider( "value" ) / 12 - feet) * 12);
    $( "#height-view" ).val( feet+"'"+inches+'"' );
    
    $('#weight-slider').slider({
          range: "min",
          value: 150,
          min: 0,
          max: 1000,
          slide: function( event, ui ) {
            $( "#weight-view" ).val( ui.value + ' lbs' );
            $( "#weight-val" ).val( ui.value + ' lbs');
          }
        });
    $( "#weight-view" ).val( $( "#weight-slider" ).slider( "value" ) + ' lbs' );
    
  <% end %>
</script>