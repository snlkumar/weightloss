 <h2 style="width:48em;">Notifications</h2>

 <%= link_to 'New Notification', notificationnew_user_path(current_user) %><br/><br/>
  <%= page_entries_info(@notifications, :entry_name => 'notification') %>
  <%= paginate(@notifications, :params => pagination_params(request)) %>
  
  <br/> <br/>
  <table style="width:60em;">
    <thead>
      <tr style="background-color:#ccc;color:#2E8EC1;text-align:left;">
        <th>Message </th>
        <th>Created on</th>
        <th>Actions</th>        
      </tr>
    </thead>
    <tbody>
      <% @notifications.each do |note| %>
        <tr class="<%#= cycle('odd', 'even') %>">
          <td><%=truncate note.message.html_safe, :length=> 40 %></td>
           <td ><%=note.created_at.strftime("%Y-%m-%d")%></td>                  
          <td class="actions">
            <%= link_to 'Show', notificationDetail_user_path(note) %> | 
            <%= link_to 'Delete', deleteNotification_user_path(note), :confirm => 'Are you sure?' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
