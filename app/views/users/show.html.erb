  <h2 id="personal-info">Personal Info <%= link_to 'edit', user_edit_personal_info_path(current_user) if @user == current_user %></h2>
  
  <div class="grid_2 alpha">Bio</div>
  <div class="grid_6 omega"><%= @user.bio %></div>
  
  <div class="clear"></div>
  
  <div class="grid_2 alpha">Employer</div>
  <div class="grid_6 omega"><%= @user.employer %>&nbsp;</div>
  <div class="grid_2 alpha">Position</div>
  <div class="grid_6 omega"><%= @user.employment_position %>&nbsp;</div>
  
  <div class="clear"></div>
  
  <div class="grid_2 alpha">College</div>
  <div class="grid_6 omega"><%= @user.college %>&nbsp;</div>
  
  <div class="clear"></div>
