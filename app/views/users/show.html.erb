<div  class="full">
  <div class="grid_4">
    &nbsp;
    <% if @user.avatar.file? %>
      <%= image_tag(@user.avatar.url(:large), :class => "profile-avatar") %>
    <% else %>
      <div class="profile-avatar"></div>
    <% end %>
    
  </div>

  <div id="profile-center" class="grid_8">
    <h2><%= @user.full_name %></h2>
  
    <div id="personal-stats"><span><%= 'Chandler' %>, <%= 'AZ' %></span> | <span>Web Developer</span> | <span>Married</span> | <span>29</span></div>
  
    <p id="latest-goal"><b>Goal as of 11/2010:</b> Lose 25lbs by March 15, 2011</p>
  </div>

  <div class="grid_4">
    &nbsp;
  </div>

</div>

<div class="clear"></div>

<div class="grid_4">
  &nbsp;
