  <div class="grid_6 omega"><%= @user.high_school %>&nbsp;</div>
  
  <div class="clear"></div>
  
  <div class="grid_2 alpha">Relationship<br/>Status</div>
  <div class="grid_6 omega"><%= @user.marital_status.try :titleize %>&nbsp;</div>
  
  <div class="clear"></div>
  
  <div class="grid_2 alpha">Interested In</div>
  <div class="grid_6 omega"><%= @user.interested_in.try :titleize %>&nbsp;</div>
  
  <div class="clear"></div>
  
  <h2 id="personal-info">Nutrition Info <%= link_to 'edit', user_edit_nutrition_info_path(current_user) if @user == current_user %></h2>
  
