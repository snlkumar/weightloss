<div class="grid_11">
  <h3>Account Information</h3>

  <% form_for current_user, :html => {:class => 'edit'} do |f| %>
    <p>
      <%= f.label :username, %Q{Username  <span class="help-text">(Minimum of 4 Characters)</span> } %><br/>
      <%= f.text_field :username, :placeholder => "Ex: Nickname", :class => 'grid_6 alpha' %>
      <span class="clear"></span>
    </p>
    
    <p>
      <%= f.label :password, %Q{Password  <span class="help-text">(Minimum of 6 Characters)</span> } %><br/>
      <%= f.text_field :password, :placeholder => "Your password", :class => 'grid_6 alpha' %>
      <span class="clear"></span>
    </p>
    
    <p>
      <%= f.label :password_confirmation, %Q{ Confirm Password <span class="help-text">(Minimum of 6 Characters)</span> } %><br/>
      <%= f.text_field :password_confirmation, :placeholder => "Confirm Your Password", :class => 'grid_6 alpha' %>
      <span class="clear"></span>
    </p>
    
    <p>
      <%= f.label :email, %Q{ Email <span class="help-text">(Note: Email will not be publicly displayed.)</span> } %><br/>
      <%= f.text_field :email, :placeholder => "Ex: email@address.com", :class => 'grid_6 alpha' %>
      <span class="clear"></span>
    </p>
    
    <%= f.submit 'Save' %>
  <% end %>
</div>
