<!-- Tracking Show -->
<div class="full">
  <div class="grid_4">
    &nbsp;
    <% if current_user.avatar.file? %>
      <%= image_tag(current_user.avatar.url(:large), :class => "profile-avatar") %>
    <% else %>
      <div class="profile-avatar"></div>
    <% end %>
    
  </div>
  
  <div id="tracking-center" class="grid_8">
    
    <table id="calorie-table" >
      <tbody>
        <tr>
          <td id="tracking-calories-header" colspan="2">
            <h2><%= current_user.full_name %>'s Calories</h2>
          </td>
        </tr>
        <tr>
          <td>
            <span class="count">746</span><br/>
            Burned Today
          </td>
          <td>
            <span class="count">992</span><br/>
            Consumed Today
          </td>
        </tr>
        <tr>
          <td>
            <span class="count">746</span><br/>
            Burned This Week
          </td>
          <td>
            <span class="count">992</span><br/>
            Left Today
          </td>
        </tr>
        <tr>
          <td>
            <div class="tracking-button">Track My Exercise</div>
          </td>
          <td>
            <div class="tracking-button">Track My Diet</div>
          </td>
        </tr>
      </tbody>
    </table>
    
    <div class="clear"></div>
  </div>
  
  <div class="grid_4">
    <div style="border: 1px solid #CCC">
      BMI
    </div>
  </div>

</div>

<div class="clear"></div>

<div class="grid_4">
  &nbsp;
</div>

<div class="grid_8 profile-center-content">
  &nbsp;
  
  
</div>

<div class="grid_4">
  &nbsp;
</div>