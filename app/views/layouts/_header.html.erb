<div id="header" class="full">
  <div class="small-nav container_16">
    <div class="grid_5 sidebar-container" style="height: 26px;">
      &nbsp;
    </div>
    <div class="grid_11">
      <%= render :partial => 'shared/session_menu_bar' %>
    </div>
    <div class="clear">&nbsp;</div>
  </div>
  
  <div id="main-nav" class="full">
    <div class="main-nav container_16" style="position:relative;">
      
      <% if logged_in? %>
        <div id="add-meal" class="button">
          <%= link_to "+ Add Meal", new_meal_path %>
        </div>
      
        <div id="add-activity" class="button">
          <%= link_to "+ Add Activity", new_workout_path %>
        </div>
      <% end %>
      
      <% form_tag searches_path, :id => 'global-search' do %>
        <%= text_field_tag 'search[keywords]', (params[:search] ? params[:search][:keywords] : ''), 
                            :title => "Search our wellness library" %>
        <%#= image_submit_tag 'orange_magnify_glass.png', :id => 'global-search-button' %>
      <% end %>
      
      <h2 id="logo" class="grid_5 sidebar-container"><%= link_to 'myweightworld', tracking_path %></h2>
      
      <div class="clear">&nbsp;</div>
      
      <div class="grid_5 sidebar-container main-nav-spacer">&nbsp;</div>
      <div class="grid_11 main-nav-spacer">&nbsp;</div>
      <div class="clear">&nbsp;</div>
      
      <% content = yield(:back_bar) %>
      <% if content.nil? %>
        <div id="back-bar" class="grid_5 sidebar-container light-blue">
          <%= link_to "Back to Overview", {} %>
        </div>
      <% else %>
        <%= content %>
      <% end %>
      
      <div id="nav-bar">
        <%= render :partial => 'shared/nav_bar' %>
      </div>
      
      <div class="clear">&nbsp;</div>
    </div>
  </div>
</div>
<div class="clear">&nbsp;</div>