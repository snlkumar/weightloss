<html class="no-js" lang="en"> <!--<![endif]-->
  <head>
    <%= render :partial => '/layouts/head' %>
  </head>
  <body>
    <%= render :partial => '/layouts/header' %>
    
    <div class="container_16">
      <div class="grid_5 ">
        <div class="sidebar-container">
          <p id="user-name" class="grid_5"><%= current_user.full_name %></p>
          
          <div class="clear">&nbsp;</div>
          
          <% if current_user.avatar.file? %>
            <div class="small-avatar avatar"><%= image_tag(current_user.avatar.url(:tracking)) %></div>
          <% else %>
            <div class="small-avatar"></div>
          <% end %>
          
          <%= link_to 'Edit Profile', user_edit_personal_info_path(current_user), :id => 'edit-profile', :class => 'outlined-fade wide' %>
          
          <% if current_user.city.present? || current_user.state.present? %>
            <p id="location" class="right-side"><%= [current_user.city, current_user.state].compact.join(', ') %></p>
          <% end %>
          <div class="clear">&nbsp;</div>
          
          <br/>
        </div>
        
        <div class="clear">&nbsp;</div>
        <br/>
        
        <!-- Categories  -->
        <div id="search-categories-sidebar" class="sidebar-container subsection" >
          <h4 class="sidebar-subheader">Categories</h4>
          
          <p>We have an extensive library to help you with many facets of fitness and wellness - peruse by category</p>
          
          <ul id="search-categories">
            <%= render :partial => '/searches/category', :collection => @categories %>
          </ul>
          
          <div class="clear">&nbsp;</div>
        </div>
      </div>
      
      <%= yield :sidebar %>
      
      <div id="nav-bar">
        <%= render :partial => 'shared/nav_bar' %>
      </div>
      
      <div id="content" class="grid_11 profile">
        <%= render :partial => '/shared/flash', :locals => {:flash => flash} %>
        
        <%= yield %>
      </div>
      
      <br/>
      
    </div>
    
    <div class="full">
      <div id="footer" class="container_16">
        
        <div style="clear:both">&nbsp;</div>
      </div>
    </div>
    
    <%= render :partial => "layouts/js_libs" %>
    
    <%= javascript_include_tag 'flowplayer-3.2.6.min.js', "highcharts", 'jquery.selectBox', 'mustache.js' %>
    
    <script type="text/javascript">var switchTo5x=true;</script>
    <script type="text/javascript" src="http://w.sharethis.com/button/buttons.js"></script>
    <script type="text/javascript">
      stLight.options({publisher:'6b97e80a-7bcf-4bfa-a0d8-2992f8b043a5'});
      
    </script>
    
    <script type="text/javascript" charset="utf-8">
      $(document).ready(function() {
        <%= yield :js %>
        
        <%= render :partial => 'shared/weight_update_js' %>
      });
    </script>
  </body>
</html>