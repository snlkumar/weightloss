<!DOCTYPE html>
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" /> 
    <title><%= yield(:title) || "MyWeightWorld" %></title> 
    <!-- <link rel="shortcut icon" href="/favicon.ico" /> -->
    <%= stylesheet_link_tag 'reset', '960', "ui-lightness/jquery-ui-1.8.7.custom.css", 'application', :media => "screen, projection" %>
    <%= javascript_include_tag "jquery-1.4.4.dev", "https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.7/jquery-ui.js", "application" %>
    
    <script type="text/javascript" charset="utf-8">
      <% content_for :js do %>
        window.gOverride = {
          gColor: '#FF0000',
          pColor: '#0000FF',
          gOpacity: 0.15,
          pOpacity: 0.25,
          pHeight: 18,
          pOffset: -2,
          gColumns: 16,
          invert: false
        }
      
        createGridder = function() {
          document.body.appendChild(
            document.createElement('script'))
            .src='/javascripts/960.gridder.js';
        }
        <% if Rails.env.development? %>createGridder();<% end %>
      <% end %>
    </script>
  </head>
  <body>
    <div class="header">
      
      <div id="small-nav" class="full">
        <div class="small-nav container_16">
          
          <div class="grid_16">
            <% if logged_in? %>
              <%= current_user.full_name %> (<%= link_to 'Logout', user_session_path, :method => :delete %>)
            <% else %>
              <%= link_to 'Already a User? Sign in', new_user_session_path %> | <%= link_to 'Sign up', new_user_path %>
            <% end %>
          </div>
          <div style="clear:both">&nbsp;</div>
          
        </div>
      </div>
      
      <div id="main-nav" class="full">
        <div class="main-nav container_16">
          
          <div class="grid_16">
            <h2 id="logo"><a href="">myweightworld</a></h2>
          </div>
          <div style="clear:both">&nbsp;</div>
          
        </div>
      </div>
    </div>
    <!-- DONE HEADER -->
    
    <div class="full">
      <div id="content" class="container_16">
        <%= yield %>
      </div>
    </div>
    
    <div class="full">
      <div id="footer" class="container_16">
        
        <div style="clear:both">&nbsp;</div>
      </div>
    </div>
    
    <script type="text/javascript" charset="utf-8">
      $(document).ready(function() {
        <%= yield :js %>
      });
    </script>
  </body>
</html>