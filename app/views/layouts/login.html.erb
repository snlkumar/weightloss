<html class="no-js" lang="en"> <!--<![endif]-->
  <head>
    <%= render :partial => '/layouts/head' %>
  </head>
  <body>
    <div class="header" class="full">
      <div class="small-nav full">
        <div class="container_16">
          <div id="sidebar-top" class="grid_5 sidebar-container">
            &nbsp;
          </div>
          <div class="grid_11">
            <%= render :partial => 'shared/session_menu_bar' %>
          </div>
          <div class="clear">&nbsp;</div>
        </div>
      </div>
      
      <div id="main-nav" class="full">
        <div class="main-nav container_16" style="position:relative;">

          <h2 id="logo" class="grid_5 sidebar-container"><%= link_to 'myweightworld', home_path %></h2>

          <div class="clear">&nbsp;</div>

          <div class="grid_5 sidebar-container main-nav-spacer">&nbsp;</div>
          <div class="grid_11 main-nav-spacer">&nbsp;</div>
          <div class="clear">&nbsp;</div>
        </div>
      </div>

      <div class="full" style="height: 1px; background-color: #FFF;"></div>
    </div>
    <!-- DONE HEADER -->
    
    <div id="content" class="container_16">
      <%= yield %>
    </div>
    
    <div class="full">
      <div id="footer" class="container_16">
        
        <div style="clear:both">&nbsp;</div>
      </div>
    </div>
    
    <%= render :partial => "layouts/js_libs" %>
    
    <script type="text/javascript" charset="utf-8">
      $(document).ready(function() {
        <%= yield :js %>
      });
    </script>
  </body>
</html>