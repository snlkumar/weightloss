<!doctype html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7]> <html class="no-js ie6" lang="en"> <![endif]-->
<!--[if IE 7]>    <html class="no-js ie7" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js ie8" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> 
<html class="no-js" lang="en"> <!--<![endif]-->
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame
         Remove this if you use the .htaccess -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    
    <!-- Mobile viewport optimized: j.mp/bplateviewport -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title><%= yield(:title) || "MyWeightWorld" %></title> 
    <!-- <link rel="shortcut icon" href="/favicon.ico" /> -->
    
    <%= stylesheet_link_tag '960', "ui-lightness/jquery-ui-1.8.9.custom.css", 'application', :media => "screen, projection" %>
    
  </head>
  <body>
    <div id="header" class="full">
      <div class="small-nav container_16">
        <div class="grid_5 sidebar-container" style="background-color: #fff; height: 26px;">
          &nbsp;
        </div>
        <div class="grid_11">
          <%= render :partial => 'shared/session_menu_bar' %>
        </div>
        <div class="clear">&nbsp;</div>
      </div>
      
      <div id="main-nav" class="full">
        <div class="main-nav container_16">
          
          <h2 id="logo" class="grid_5 sidebar-container"><%= link_to 'myweightworld', tracking_path %></h2>
          
          <div class="clear">&nbsp;</div>
          
          <div class="grid_5 sidebar-container" style="height:25px; background-color: #fff;">&nbsp;</div>
          <div class="grid_11" style="height:25px;">&nbsp;</div>
          
          <div class="clear">&nbsp;</div>
          
          <div id="back-bar" class="grid_5 light-blue sidebar-container">
            <%= link_to "Back to Overview", {} %>
          </div>
          
          <div id="nav-bar" class="grid_11">
            <ul>
              <li>
                <%= link_to "", {}, :id => 'profile-tab' %>
              </li>
              <li>
                <%= link_to "", {}, :id => 'food-tab' %>
              </li>
              <li>
                <%= link_to "", {}, :id => 'exercise-tab' %>
              </li>
              <li style="width: 120px">
                <%= link_to 'Community Feed', {} %>
              </li>
              <li style="width: 120px">
                <%= link_to 'Acheivements', {} %>
              </li>
            </ul>
            
          </div>
          
          <div class="clear">&nbsp;</div>
        </div>
      </div>
    </div>
    <!-- DONE HEADER -->
    
    <div class="clear">&nbsp;</div>
    
    <div class="container_16">
      <div class="grid_5 ">
        <div class="sidebar-container" style="background-color: white;">
          <p id="user-name" class="grid_5"><%= @user.full_name %></p>
          
          <div class="clear">&nbsp;</div>
          
          <% if @user.avatar.file? %>
            <%= image_tag(@user.avatar.url(:profile), :class => "profile-avatar") %>
          <% else %>
            <div class="profile-avatar"></div>
          <% end %>
          
          <%= link_to 'Edit', user_edit_personal_info_path(current_user), :id => 'edit-profile', :class => 'light-blue' %>
          
          <div class="clear">&nbsp;</div>
          
          <p id="location"><%= @user.city %>, <%= @user.state %></p>
          <p id="permalink">permalink here</p>
          <p id="twitter-handle"><%= @user.twitter_name %></p>
          <br/>
        </div>
        
        <div class="clear">&nbsp;</div>
        <br/>
        
        <div class="sidebar-container" style="padding-top: 20px; background-color: white;">
          Achievement Date
          
          <div id="achievement-calendar" class="grid_2">
            <div>June<br/><span style="font-size: 30pt;">9</span></div>
          </div>
          <div class="grid_3">
            <span>186 lbs</span><br/>
            recorded X days ago
            
            <%= link_to 'Update Weight', {}, :class => 'grid_3 alpha omega' %>
          </div>
          
          <div class="clear">&nbsp;</div>
        </div>
      </div>
      
      
      
      <div id="content" class="grid_11 profile">
        <%= yield %>
      </div>
      
      <br/>
      
      
    </div>
    
    <div class="full">
      <div id="footer" class="container_16">
        
        <div style="clear:both">&nbsp;</div>
      </div>
    </div>
    
    <!-- JavaScript at the bottom for fast page loading -->
    <%= javascript_include_tag "modernizr-1.7.min.js", "respond.min.js" %>
    
    <!-- Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if necessary -->
    <!-- // <script src="//ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.js"></script>
        //     <script>window.jQuery || document.write("<script src='/javascripts/jquery-1.6.min.js'>\x3C/script>")</script> -->
    
    <%= javascript_include_tag "jquery-1.4.4.dev.js", "jquery-ui-1.8.9.min.js", "underscore", "application" %>
    <%= init_tinymce_hammer_if_required %>
    
    <%= render :partial => "shared/gridder" %>
    
    <script type="text/javascript" charset="utf-8">
      $(document).ready(function() {
        <%= yield :js %>
      });
    </script>
  </body>
</html>