<!DOCTYPE html>
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" /> 
    <title><%= yield(:title) || "MyWeightWorld" %></title> 
    <!-- <link rel="shortcut icon" href="/favicon.ico" /> -->
    <%= stylesheet_link_tag 'reset', '960', "ui-lightness/jquery-ui-1.8.7.custom.css", 'application', :media => "screen, projection" %>
    <%= javascript_include_tag "jquery-1.4.4.dev", "https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.7/jquery-ui.js", "underscore", "application" %>
    
    <script type="text/javascript" charset="utf-8">
      <% content_for :js do %>
        window.gOverride = {
          gColor: '#FF0000',
          pColor: '#0000FF',
          gOpacity: 0.15,
          pOpacity: 0.25,
          pHeight: 18,
          pOffset: -2,
          gColumns: 16,
          invert: true
        }
      
        createGridder = function() {
          document.body.appendChild(
            document.createElement('script'))
            .src='/javascripts/960.gridder.js';
        }
        <% if Rails.env.development? %>createGridder();<% end %>
      <% end %>
    </script>
    
  </head>
  <body>
      <div id="header" class="full">
      <div class="small-nav container_16">
        
        <div class="grid_16">
          <div class="grid_4 push_12 prefix_1">
            <% if logged_in? %>
              Hi, <%= current_user.full_name %> | <%= link_to 'Sign Out', user_session_path, :method => :delete %>
            <% else %>
              <%= link_to 'Already a User? Sign in', new_user_session_path %> | <%= link_to 'Sign up', new_user_path %>
            <% end %>
          </div>
          
        </div>
        <div class="clear">&nbsp;</div>
      </div>
      
      <div id="main-nav" class="full">
        <div class="main-nav container_16">
          
          <div class="grid_4">
            <h3 id="logo"><%= link_to 'myweightworld', {} %></h3>
          </div>
          <div class="grid_8">
            <ul id="profile-tabs">
              <li class="<%= 'active' if request.request_uri.match(user_path(current_user)) %>">
                <div><%= link_to 'Profile', user_path(@user) %></div>
              </li>
              <li><div><%= link_to 'News Feed', {} %></div></li>
              <li><div><%= link_to 'Tracking', bmi_users_path %></div></li>
            </ul>
          </div>
          <div class="grid_4">
            
          </div>
          
          <div class="clear">&nbsp;</div>
        </div>
      </div>
    </div>
    <!-- DONE HEADER -->
    
    <div class="clear">&nbsp;</div>
    
    <div id="active-tab-content" class="full">
      <div id="content" class="container_16 profile">
        <%= yield %>
      </div>
    </div>
    
    <div class="full">
      <div id="footer" class="container_16">
        
        <div style="clear:both">&nbsp;</div>
      </div>
    </div>
    
    <script type="text/javascript" charset="utf-8">
      $(document).ready(function() {
        <%= yield :js %>
      });
    </script>
  </body>
</html>