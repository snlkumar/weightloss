
<!-- Tracking Show -->
<div class="full">
  <div class="grid_4">
    <div id="inline-calendar"></div>
    
  </div>
  
  <div class="grid_12">
    <p class="h3" style="margin: 50px 0px;">
      Hi <%= current_user.first_name %>, what did you eat? <%= select_tag "", options_for_select(Meal::TYPES) %>
    </p>
    
    <br/>
    
    <% @start_date.downto(@start_date - 6.days) do |day| %>
      
      <%= render :partial => 'day', :locals => { :day => day } %>
      
    <% end %>
  </div>
  
</div>

<script type="text/javascript" charset="utf-8">
  <% content_for :js do %>
    $('#inline-calendar').datepicker({
       dateFormat: "yy-mm-dd",
       defaultDate: "<%= @start_date %>",
       onSelect: function(dateText, inst) { 
         window.location = "<%= meals_path %>?date=" + dateText;
       }
    });
  <% end %>
</script>

<style type="text/css" media="screen">
  .ui-datepicker { width: auto !important; }
</style>